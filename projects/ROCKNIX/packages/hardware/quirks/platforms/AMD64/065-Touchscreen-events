# Minimal OS variable loading for performance
. /etc/profile.d/001-functions

TOUCHSCREEN_EVENTS=$(get_setting key.touchscreen.events)
if [ -z "${TOUCHSCREEN_EVENTS}" ]
then
  set_setting key.touchscreen.events 1
fi
