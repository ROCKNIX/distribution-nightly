. /etc/profile

PID="$(pidof wvkbd-mobintl)"
if [  "$PID" != ""  ]; then
  killall wvkbd-mobintl
else
 /usr/bin/wvkbd-mobintl -L 350 -fg 6b6b75 -fg-sp 6b6b75 -bg 1d1d1d --text ffffff --text-sp ffffff -fn 50 -l simple --hidden
fi
